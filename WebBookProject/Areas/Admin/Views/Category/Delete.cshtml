@model Category

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-danger py-2">
                    Delete Category
                </h2>
            </div>
        </div>
    </div>  
</div>

<div class="card-body p-4">
    <form method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="border p-3 mt-4">
            <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" disabled asp-for="Name"/>
                    <label class="ms-2" asp-for="Name"></label>
            </div> 
            <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" disabled asp-for="DisplayOrder"/>
                    <label class="ms-2"  asp-for="DisplayOrder"></label>
            </div> 

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> 
                        <i class="bi bi-back"></i> Back To List
                    </a>
                </div>
            </div>        
        </div>
    </form>
</div>


