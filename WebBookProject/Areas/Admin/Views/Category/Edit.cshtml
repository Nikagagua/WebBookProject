@model Category

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-warning py-2">
                    Edit Category
                </h2>
            </div>
        </div>
    </div>  
</div>

<form method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3 mt-4">
        <div class="form-floating py-2 col-12">
                <input class="form-control border-0 shadow" asp-for="Name"/>
                <label class="ms-2" asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div> 
        <div class="form-floating py-2 col-12">
                <input class="form-control border-0 shadow" asp-for="DisplayOrder"/>
                <label class="ms-2"  asp-for="DisplayOrder"></label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div> 

        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-warning form-control">
                    <i class="bi bi-pencil-square"></i> Update
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> 
                    <i class="bi bi-back"></i> Back To List
                </a>
            </div>
        </div>        
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
