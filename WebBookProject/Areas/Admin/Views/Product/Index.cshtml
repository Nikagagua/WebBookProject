@model IEnumerable<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Product List
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="card-body shadow">
    <div class="container">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Product
                    </a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
        <table id="tblData" class="table table-bordered table-hover table-striped text-center" style="width: 100%;"/>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ISBN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}
