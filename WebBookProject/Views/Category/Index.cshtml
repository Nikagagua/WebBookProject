@model IEnumerable<WebProject.Models.Models.CategoryModel>

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Category List
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="card-body shadow">
    <div class="container">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-area="" asp-controller="Category" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create Category
                </a>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => category.DisplayOrder)</td>
                    <td>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group gap-2 d-flex justify-content-center align-items-center">
                                <!-- Edit Button -->
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                
                                <!-- Delete Button -->
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

