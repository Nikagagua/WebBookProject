@model CategoryModel

<form method="post">
    <input type="hidden" asp-for="CategoryId"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Category
            </h2>
            <hr/>
        </div>
        <div class="row mb-3 pt-1">
            <label class="form-label pt-0" asp-for="Name"></label>
            <input class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div> 
        <div class="row mb-3 pt-1">
            <label class="form-label pt-0" asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div> 

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-warning rounded form-control">
                    <i class="bi bi-pencil-square"></i> Update
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded form-control"> 
                    <i class="bi bi-back"></i> Back To List
                </a>
            </div>
        </div>        
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
