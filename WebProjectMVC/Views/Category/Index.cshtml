@model IEnumerable<WebProjectMVC.Models.CategoryModel>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="" asp-controller="Category" asp-action="Create" class="btn btn-primary rounded">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => category.Name)</td>
                <td>@Html.DisplayFor(modelItem => category.DisplayOrder)</td>
                <td>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <!-- Edit Button -->
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning rounded mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            
                            <!-- Delete Button -->
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger rounded mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
